{
  "name": "arm-server",
  "author": "BeeeQueue <adam.lj.haglund@gmail.com>",
  "version": "1.0.0",
  "private": true,
  "license": "AGPL-3.0-only",
  "engines": {
    "node": "^14.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register -r dotenv/config src/index.ts",
    "fetch-data": "ts-node bin/update.ts",
    "migrate": "knex migrate:latest --knexfile knexfile.ts",
    "migrate:create": "knex migrate:make --knexfile knexfile.ts -x ts",
    "prestart": "yarn run migrate",
    "pretest": "cross-env NODE_ENV=test yarn run migrate",
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "test": "cross-env NODE_ENV=test yarn jest"
  },
  "resolutions": {
    "set-value": "2.0.1",
    "@types/node": "14.10.1"
  },
  "dependencies": {
    "@sentry/apm": "5.23.0",
    "@sentry/node": "5.27.4",
    "cross-env": "7.0.2",
    "joi": "17.2.1",
    "knex": "0.21.12",
    "koa": "2.13.0",
    "koa-bodyparser": "4.3.0",
    "koa-connect": "2.1.0",
    "koa-logger": "3.2.1",
    "koa-router": "9.4.0",
    "pg": "8.3.3",
    "sqlite3": "5.0.0",
    "superagent": "6.1.0",
    "ts-node": "9.0.0",
    "typescript": "4.0.5"
  },
  "devDependencies": {
    "@types/koa": "2.11.4",
    "@types/koa-bodyparser": "4.3.0",
    "@types/koa-logger": "3.1.1",
    "@types/koa-router": "7.4.1",
    "@types/node": "14.10.1",
    "@types/superagent": "4.1.10",
    "@types/supertest": "2.0.10",
    "dotenv": "8.2.0",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "lint-staged": "10.3.0",
    "prettier": "2.1.2",
    "supertest": "6.0.1",
    "ts-jest": "26.3.0",
    "ts-node-dev": "1.0.0",
    "tsconfig-paths": "3.9.0"
  }
}
