{
	"name": "arm-server",
	"type": "module",
	"author": "BeeeQueue <adam@haglund.dev>",
	"version": "1.0.0",
	"private": true,
	"license": "AGPL-3.0-only",
	"homepage": "https://arm.haglund.dev/docs",
	"packageManager": "pnpm@10.12.4",
	"engines": {
		"node": "^24"
	},
	"simple-git-hooks": {
		"pre-commit": "node_modules/.bin/nano-staged"
	},
	"nano-staged": {
		"*.{js,cjs,mjs,ts,cts,mts,json}": [
			"biome check --fix"
		]
	},
	"scripts": {
		"build": "tsdown",
		"dev": "node --watch src/index.ts",
		"docs": "pnpm --package=@redocly/cli dlx redocly build-docs docs/openapi.yaml",
		"docs:dev": "onchange --initial --kill docs/openapi.yaml -- pnpm --silent run docs",
		"docker:build": "docker build . --tag arm-server",
		"docker:start": "pnpm --silent docker:build; pnpm --silent docker:run",
		"docker:run": "docker run -it --rm --name arm -p 3000:3000 arm-server",
		"fetch-data": "node bin/update.ts --exit",
		"lint": "eslint src",
		"start": "node src/index.ts",
		"test": "vitest",
		"typecheck": "tsc --noEmit",
		"prepare": "is-ci || simple-git-hooks"
	},
	"devDependencies": {
		"@antfu/eslint-config": "4.16.1",
		"@biomejs/biome": "2.0.5",
		"@hono/node-server": "1.14.4",
		"@hono/standard-validator": "0.1.2",
		"@standard-schema/spec": "1.0.0",
		"@tsconfig/node24": "24.0.1",
		"@tsconfig/strictest": "2.0.5",
		"@types/json-schema": "7.0.15",
		"@types/node": "24.0.7",
		"@vitest/coverage-v8": "3.2.4",
		"db0": "0.3.2",
		"dotenv": "16.5.0",
		"eslint": "9.30.0",
		"hono": "4.8.3",
		"is-ci": "4.1.0",
		"kysely": "0.28.2",
		"mentoss": "0.11.0",
		"nano-staged": "0.8.0",
		"onchange": "7.1.0",
		"pino": "9.7.0",
		"pino-pretty": "13.0.0",
		"simple-git-hooks": "2.13.0",
		"tsconfig-paths": "4.2.0",
		"tsdown": "0.12.9",
		"type-fest": "4.41.0",
		"typescript": "5.8.3",
		"valibot": "1.1.0",
		"vitest": "3.2.4",
		"xior": "0.7.8"
	}
}
